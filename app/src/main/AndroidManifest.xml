<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.inger.beaconbeachler">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="19" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>


<!--android:label="@string/app_name"-->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name="BeaconReferenceApplication"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainPage"
            android:launchMode="singleInstance"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.ActionBar">
        </activity>

        <activity
            android:name=".WritingPage"
            android:theme="@style/AppTheme.ActionBar"
            android:label="@string/title_activity_writing_page"/>

        <activity
            android:name=".CameraPage"
            android:label="@string/title_activity_camera"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".BeaconPage"
            android:label="@string/title_activity_beacon_page"
            android:theme="@style/AppTheme.ActionBar">
        </activity>


        <activity android:name=".EggAndBeacon"
            android:label="EggAndBeacon"></activity>
        <activity
            android:name=".Lyd"
            android:label="@string/title_activity_lyd_activity"
            android:theme="@style/AppTheme.ActionBar"></activity>
        <activity
            android:name=".LoginPage"
            android:label="@string/title_activity_login_page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegsiterPage"
            android:label="@string/title_activity_regsiter_page"
            android:theme="@style/AppTheme.ActionBar"></activity>
        <provider

            android:name=".MyFileContentProvider"

            android:authorities="com.example.inger.beaconbeachler.bilde"

            android:enabled="true"

            android:exported="true" />
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>