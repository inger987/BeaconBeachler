<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- API 14-19 -->
        <!-- Main colors in application-->
        <item name = "colorPrimaryDark">@color/header</item>

    </style>

    <!-- inherit everything from AppBaseTheme, Here you are able to override eg, colors,background -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- til hva skal dette brukes til ? er ikke referert noe sted-->
    <style name="loading">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#000</item>
    </style>

</resources>
