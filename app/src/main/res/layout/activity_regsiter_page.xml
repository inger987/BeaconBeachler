<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.inger.beaconbeachler.RegsiterPage"
    android:background="@color/white">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/nybruker"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:hint="Brukernavn"
        android:background="@drawable/rounded_border_edittext"
        android:drawableLeft="@drawable/usericon"

        android:id="@+id/editTextUsername">
        <requestFocus/>
    </EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:hint="Passord"
        android:background="@drawable/rounded_border_edittext"
        android:drawableLeft="@drawable/passwordicon"

        android:id="@+id/editTextPassword">
        <requestFocus/>
    </EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Fornavn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:background="@drawable/rounded_border_edittext"
        android:drawableLeft="@drawable/usericon"
        android:id="@+id/editTextFirstName">
        <requestFocus/>
    </EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Etternavn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:background="@drawable/rounded_border_edittext"
        android:drawableLeft="@drawable/usericon"
        android:id="@+id/editTextLastName">
        <requestFocus/>
    </EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRER"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:background="@drawable/rounded_edges_button"
        android:id="@+id/buttonRegister" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TILBAKE TIL INNLOGGING"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal" />


</LinearLayout>