    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsername"
        android:layout_marginBottom="2dp"
        android:layout_alignTop="@+id/btnText"
        android:layout_centerHorizontal="true" />

    <!-- btnCamera width =109 -->


    <ImageButton
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:text="Aa"
        android:id="@+id/btnText"
        android:src="@mipmap/aa"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.42"
        android:layout_above="@+id/btnBeacon"
        android:layout_toStartOf="@+id/btnCamera"
        android:layout_marginBottom="43dp" />

    <ImageButton
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/btnSound"
        android:src="@mipmap/sound"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="34dp"
        android:layout_alignTop="@+id/btnBeacon"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_height="150dp"
        android:layout_width="150dp"
        style="?android:attr/borderlessButtonStyle"
        android:src="@mipmap/beacon"
        android:scaleType="fitCenter"
        android:id="@+id/btnBeacon"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btnSound"
        android:layout_marginBottom="124dp" />

    <ImageButton
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:text="@string/ta_bilde"
        android:id="@+id/btnCamera"
        android:scaleType="fitCenter"
        android:src="@mipmap/camera"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/btnText"
        android:layout_toEndOf="@+id/btnBeacon" />

    </RelativeLayout>
</LinearLayout>



