<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/relativeLayout1" android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsername" />

    <!-- btnCamera width =109 -->
    <ImageButton
        android:layout_height="122dp"
        android:layout_width="122dp"
        android:id="@+id/btnSound"
        android:layout_alignStart="@+id/btnText"
        android:src="@mipmap/mainsound"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_height="86dp"
        android:layout_width="118dp"
        android:text="Aa"
        android:id="@+id/btnText"
        android:src="@mipmap/maintekst"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.42" />

    <ImageButton
        android:layout_height="100dp"
        android:layout_width="159dp"
        android:text="Beacon"
        style="?android:attr/borderlessButtonStyle"
        android:src="@mipmap/beaconmain"
        android:scaleType="fitCenter"
        android:id="@+id/btnBeacon"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_height="138dp"
        android:layout_width="130dp"
        android:text="@string/ta_bilde"
        android:id="@+id/btnCamera"
        android:scaleType="fitCenter"
        android:src="@mipmap/maincamera"
        style="?android:attr/borderlessButtonStyle"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
 </RelativeLayout>


