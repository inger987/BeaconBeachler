<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"

        android:orientation="horizontal" >

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edges_button"
            android:drawableTop="@mipmap/writeicon"
            android:text="NOTATER"
            android:paddingTop="45dp"
            android:layout_weight="1.0"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="2.5dp"
            android:textColor="@color/white"

            android:id="@+id/btnText"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edges_button"
            android:drawableTop="@mipmap/soundicon"
            android:text="LYDOPPTAK"
            android:paddingTop="45dp"
            android:layout_weight="1.0"
            android:layout_marginTop="2.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="2.5dp"
            android:textColor="@color/white"
            android:id="@+id/btnSound"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"

            android:drawableTop="@mipmap/ibeaconicon"
            android:text="BEACON"
            android:paddingTop="45dp"
            android:layout_weight="1.0"
            android:layout_marginBottom="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="2.5dp"
            android:textColor="@color/white"
            android:id="@+id/btnBeacon"/>

        <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@drawable/rounded_edges_button"
            android:drawableTop="@mipmap/cameraicon"
            android:text="TA BILDE"
            android:paddingTop="45dp"
            android:layout_weight="1.0"
            android:layout_marginBottom="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="2.5dp"
            android:textColor="@color/white"
            android:id="@+id/btnCamera"/>


    </LinearLayout>
</LinearLayout>

