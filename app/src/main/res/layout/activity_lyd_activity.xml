<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="fill"
    android:id="@+id/linear1"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="fill"
    android:orientation="vertical"
    tools:context="com.example.inger.beaconbeachler.Lyd_activity" >

    <TextView
        android:id="@+id/recordingPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording Point: -"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/Lagre"/>

    <ImageView
        android:id="@+id/micImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@mipmap/lydimage"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="Lagre"
        android:id="@+id/Lagre"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtUploadprogress"
        android:layout_below="@+id/recordingPoint"
        android:layout_alignEnd="@+id/Lagre" />

    <Button
        android:id="@+id/stopPlay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:enabled="false"
        android:drawableTop="@mipmap/stopicon"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="visible"
        android:layout_below="@+id/micImage"
        android:layout_alignEnd="@+id/micImage" />

    <Button
        android:id="@+id/play"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:enabled="false"
        android:drawableTop="@mipmap/playicon"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="visible"
        android:layout_below="@+id/micImage"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/start"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:drawableTop="@mipmap/recordicon"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="visible"
        android:layout_below="@+id/micImage"
        android:layout_toStartOf="@+id/micImage" />

    <Button
        android:id="@+id/stop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:drawableTop="@mipmap/stopicon"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="visible"
        android:layout_below="@+id/micImage"
        android:layout_alignStart="@+id/micImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/txtUsername"
        android:layout_alignTop="@+id/micImage"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView5"
        android:layout_below="@+id/recordingPoint"
        android:layout_toEndOf="@+id/txtUsername"
        android:layout_marginTop="76dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/stop" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="slett"
        android:id="@+id/slett"
        android:layout_alignBottom="@+id/Lagre"
        android:layout_alignStart="@+id/start" />


</RelativeLayout>
</LinearLayout>